[Unit]
Description="ProxyApp ROS2 node for navigation demo"
Requires=mesh.service
After=mesh.service

[Service]
Type=simple
User=sad
Group=sad
Restart=always
RestartSec=10
ExecStart=/bin/sh -c ". /opt/ros/galactic/setup_fog.sh; /usr/bin/proxyapp_ros --ros-args -r __node:=$DRONE_DEVICE_ID -p drone_id:=$DRONE_DEVICE_ID -p drone_namespace:=$DRONE_DEVICE_ID"

[Install]
WantedBy=multi-user.target
